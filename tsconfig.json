  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/**/*"
  ]
}
